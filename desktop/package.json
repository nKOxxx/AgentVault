{
  "name": "AgentVault",
  "version": "1.3.2",
  "description": "Secure credential management for AI agents",
  "main": "main-simple.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:signed": "CSC_IDENTITY_AUTO_DISCOVERY=true electron-builder --mac"
  },
  "build": {
    "appId": "com.agentvault.app",
    "productName": "AgentVault",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main-simple.js",
      "preload.js",
      "public/**/*",
      "entitlements.mac.plist"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    },
    "fileAssociations": [
      {
        "ext": "vault",
        "name": "AgentVault Database",
        "icon": "build/icon.icns"
      }
    ]
  },
  "author": "Nikola Stojanow",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "productName": "AgentVault"
}